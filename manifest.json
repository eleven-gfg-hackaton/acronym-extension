{
    "manifest_version": 3,
    "name": "Acronym Finder",
    "version": "1.0",
    "description": "This extension will help you find the meaning of an acronym",
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "js": ["scripts/content.js"],
          "matches": [
            "https://*/*",
            "http://*/*"
          ],
          "run_at": "document_end",
          "css": ["css/main.css"]
        }
      ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "permissions": ["activeTab", "scripting"]
}